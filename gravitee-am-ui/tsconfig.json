{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "crypto": ["../node_modules/crypto-browserify"],
      "stream": ["../node_modules/stream-browserify", ".../node_modules/readable-stream"]
    },
    "downlevelIteration": true,
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2015",
    "types": ["jest"],
    "lib": ["es2016", "dom"],
    "module": "es2020"
  }
}
